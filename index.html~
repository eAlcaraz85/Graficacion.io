<span style="background-color: #1C262B;"> </span>   <span style="background-color: #1C262B;"> </span>   <span style="background-color: #1C262B;"> </span>   mp_drawing.draw_landmarks<span style="color: #c792ea;">(</span>frame, face_landmarks, mp_face_mesh.FACEMESH_CONTOURS, 
<span style="background-color: #1C262B;"> </span>   <span style="background-color: #1C262B;"> </span>   <span style="background-color: #1C262B;"> </span>   <span style="background-color: #1C262B;"> </span>   <span style="background-color: #1C262B;"> </span>   <span style="background-color: #1C262B;"> </span>   <span style="background-color: #1C262B;"> </span>   <span style="background-color: #1C262B;"> </span>   <span style="background-color: #1C262B;"> </span>   <span style="background-color: #1C262B;"> </span> drawing_spec, drawing_spec<span style="color: #c792ea;">)</span>

<span style="background-color: #1C262B;"> </span>   cv2.imshow<span style="color: #c792ea;">(</span><span style="color: #c3e88d;">'PuntosFacialesMediaPipe'</span>, frame<span style="color: #c792ea;">)</span>
<span style="background-color: #1C262B;"> </span>   <span style="color: #89DDFF;">if</span> cv2.waitKey<span style="color: #c792ea;">(</span>1<span style="color: #c792ea;">)</span> &amp; 0xFF == <span style="color: #82aaff;">ord</span><span style="color: #c792ea;">(</span><span style="color: #c3e88d;">'q'</span><span style="color: #c792ea;">)</span>:
<span style="background-color: #1C262B;"> </span>   <span style="background-color: #1C262B;"> </span>   <span style="color: #89DDFF;">break</span>

