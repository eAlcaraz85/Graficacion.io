<span style="color: #89DDFF;">def</span> <span style="color: #82aaff;">draw_eye</span><span style="color: #c792ea;">()</span>:
<span style="background-color: #1C262B;"> </span>   <span style="color: #556369;"># </span><span style="color: #556369;">Globo ocular</span>
<span style="background-color: #1C262B;"> </span>   glColor3f<span style="color: #c792ea;">(</span>1.0, 1.0, 1.0<span style="color: #c792ea;">)</span>
<span style="background-color: #1C262B;"> </span>   glutSolidSphere<span style="color: #c792ea;">(</span>1.0, 50, 50<span style="color: #c792ea;">)</span>

<span style="background-color: #1C262B;"> </span>   <span style="color: #556369;"># </span><span style="color: #556369;">Iris (azul)</span>
<span style="background-color: #1C262B;"> </span>   glColor3f<span style="color: #c792ea;">(</span>0.3, 0.5, 0.9<span style="color: #c792ea;">)</span>
<span style="background-color: #1C262B;"> </span>   glPushMatrix<span style="color: #c792ea;">()</span>
<span style="background-color: #1C262B;"> </span>   glTranslatef<span style="color: #c792ea;">(</span>0, 0, 0.57<span style="color: #c792ea;">)</span>
<span style="background-color: #1C262B;"> </span>   glutSolidSphere<span style="color: #c792ea;">(</span>0.2, 30, 30<span style="color: #c792ea;">)</span>
<span style="background-color: #1C262B;"> </span>   glPopMatrix<span style="color: #c792ea;">()</span>

<span style="background-color: #1C262B;"> </span>   <span style="color: #556369;"># </span><span style="color: #556369;">Pupila (negra)</span>
<span style="background-color: #1C262B;"> </span>   glColor3f<span style="color: #c792ea;">(</span>0.0, 0.0, 0.0<span style="color: #c792ea;">)</span>
<span style="background-color: #1C262B;"> </span>   glPushMatrix<span style="color: #c792ea;">()</span>
<span style="background-color: #1C262B;"> </span>   glTranslatef<span style="color: #c792ea;">(</span>0, 0, 1.02<span style="color: #c792ea;">)</span>
<span style="background-color: #1C262B;"> </span>   glutSolidSphere<span style="color: #c792ea;">(</span>0.2, 20, 20<span style="color: #c792ea;">)</span>
<span style="background-color: #1C262B;"> </span>   glPopMatrix<span style="color: #c792ea;">()</span>

<span style="background-color: #1C262B;"> </span>   <span style="color: #556369;"># </span><span style="color: #556369;">Nervio &#243;ptico</span>
