<span style="background-color: #1C262B;"> </span>   glPushMatrix<span style="color: #c792ea;">()</span>
<span style="background-color: #1C262B;"> </span>   glTranslatef<span style="color: #c792ea;">(</span>0, 0, -1.0<span style="color: #c792ea;">)</span>
