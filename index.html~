drawing_spec = mp_drawing.DrawingSpec<span style="color: #c792ea;">(</span>thickness=1, circle_radius=1, color=<span style="color: #f78c6c;">(</span>234, 255, 233<span style="color: #f78c6c;">)</span><span style="color: #c792ea;">)</span>  <span style="color: #556369;"># </span><span style="color: #556369;">Verde</span>

<span style="color: #556369;"># </span><span style="color: #556369;">Captura de video</span>
