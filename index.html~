<h2 id="orgabee6fb">Programaci√≥n</h2>
<div class="outline-text-2" id="text-orgabee6fb">
</div>
<div id="outline-container-orgb9c3c19" class="outline-3">
<h3 id="orgb9c3c19">Programas Unidad 1</h3>
<div class="outline-text-3" id="text-orgb9c3c19">
<div class="org-src-container">
<pre class="src src-python"><span style="color: #89DDFF;">import</span> cv2 <span style="color: #89DDFF;">as</span> cv
<span style="color: #89DDFF;">import</span> numpy <span style="color: #89DDFF;">as</span> np 

<span style="color: #ffcb6b;">img</span> =cv.imread<span style="color: #c792ea;">(</span><span style="color: #c3e88d;">'tr.png'</span>,1<span style="color: #c792ea;">)</span>
<span style="color: #ffcb6b;">img2</span> =cv.cvtColor<span style="color: #c792ea;">(</span>img, cv.COLOR_BGR2GRAY<span style="color: #c792ea;">)</span>
cv.imshow<span style="color: #c792ea;">(</span><span style="color: #c3e88d;">'img2a'</span>, img2<span style="color: #c792ea;">)</span>
<span style="color: #ffcb6b;">x</span>,<span style="color: #ffcb6b;">y</span>=img2.shape<span style="color: #c792ea;">[</span>:2<span style="color: #c792ea;">]</span>
<span style="color: #82aaff;">print</span><span style="color: #c792ea;">(</span>x,y<span style="color: #c792ea;">)</span>
<span style="color: #89DDFF;">for</span> i <span style="color: #89DDFF;">in</span> <span style="color: #82aaff;">range</span><span style="color: #c792ea;">(</span>x<span style="color: #c792ea;">)</span>:
<span style="background-color: #1C262B;"> </span>   <span style="color: #89DDFF;">for</span> j <span style="color: #89DDFF;">in</span> <span style="color: #82aaff;">range</span><span style="color: #c792ea;">(</span>y<span style="color: #c792ea;">)</span>:
<span style="background-color: #1C262B;"> </span>   <span style="background-color: #1C262B;"> </span>   <span style="color: #ffcb6b;">img2</span><span style="color: #c792ea;">[</span><span style="color: #ffcb6b;">i</span>,<span style="color: #ffcb6b;">j</span><span style="color: #c792ea;">]</span>=255-img2<span style="color: #c792ea;">[</span>i,j<span style="color: #c792ea;">]</span>
cv.imshow<span style="color: #c792ea;">(</span><span style="color: #c3e88d;">'img2b'</span>, img2<span style="color: #c792ea;">)</span>
cv.imshow<span style="color: #c792ea;">(</span><span style="color: #c3e88d;">'img'</span>, img<span style="color: #c792ea;">)</span>

<span style="color: #556369;">#</span><span style="color: #556369;">img3 =cv.cvtColor(img, cv.COLOR_BGR2RGB)</span>
<span style="color: #556369;">#</span><span style="color: #556369;">img4 =cv.cvtColor(img, cv.COLOR_BGR2BGRA)</span>
<span style="color: #556369;">#</span><span style="color: #556369;">img5 =cv.cvtColor(img4, cv.COLOR_BGRA2BGR65)</span>
<span style="color: #556369;">#</span><span style="color: #556369;">cv.imshow('img', img)</span>
<span style="color: #556369;">#</span><span style="color: #556369;">cv.imshow('img2', img2)</span>
<span style="color: #556369;">#</span><span style="color: #556369;">cv.imshow('img3', img3)3</span>
<span style="color: #556369;">#</span><span style="color: #556369;">cv.imshow('img4', img4)</span>
<span style="color: #556369;">#</span><span style="color: #556369;">cv.imshow('img4', img5)</span>

cv.waitKey<span style="color: #c792ea;">(</span>0<span style="color: #c792ea;">)</span>
